DASSEMBLERS_HARRIS = M_Dassemble_2c_Harris.o M_Dassemble_PP_2c.o M_Dassemble_rho_McWEDA_Harris.o M_Dassemble_usr_McWEDA_Harris.o M_Dassemble_3c_Harris.o M_Dassemble_vxc_McWEDA_Harris.o M_Dassemble_ewald_Harris.o
DASSEMBLERS_DOGS = M_Dassemble_2c_DOGS.o M_Dassemble_PP_2c.o M_Dassemble_rho_McWEDA_DOGS.o M_Dassemble_usr_McWEDA_DOGS.o M_Dassemble_3c_DOGS.o M_Dassemble_vxc_McWEDA_Harris.o M_Dassemble_ewald_Harris.o

all: libthd_DASSEMBLERS_HARRIS.a libthd_DASSEMBLERS_DOGS.a

